@using BizLogic.Planning
@model MaterialViewModel
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Añadir Material";
}

<form method="post">
    <CENTER>
        <h3>Añadir material </h3>
        <div class="col-md-2 col-md-offset-3">
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Unidad de medida </label>
                <select class="form-control" asp-for="UnidadMedida">
                    @foreach (var item in Model.UnidadesMedida)
                    {
                        <option value=@item.Nombre>@item.Nombre</option>
                    }
                </select>
            </div>
           
            <button class="button form-control" type="submit">   <span>Añadir</span> </button>
        </div>
    </CENTER>
</form>
