@using BizLogic.Planning
@{ 
    Layout = "AdminLayout";
}

<form method="post" class="main">
    <div class="form-group col-md-2 col-md-offset-3">
        <label>Año</label>
        <input type="number" placeholder="Año" name="Año" class="form-control" />
    </div>
    <div class="form-group col-md-3 col-md-offset-3">
        <label>Tipo de Plan</label>
        <select class="form-control" name="TipoPlan">

            <option value="Mantenimiento">Mantenimiento</option>
            <option value="Reparación">Reparación</option>
        </select>
    </div>

    @*<input type="text" placeholder="Tipo" name="TipoPlan" />*@
    <button class="button" type="submit" value="Add" name="button">   <span>Añadir</span> </button>
</form>