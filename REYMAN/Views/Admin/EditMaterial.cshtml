@using BizLogic.Planning
@model MaterialViewModel
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Editar Material";
}

<form method="post">
    <CENTER>
        <h3>Añadir material </h3>
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Unidad de medida </label>
                <select class="form-control" asp-for="UnidadMedida">
                    @foreach (var item in Model.UnidadesMedida)
                     {
                        <option value=@item.Nombre>@item.Nombre</option>
                     }
                </select>
            </div>

            <input asp-for="MaterialId" hidden="hidden" />
            <button class="button" name="button" value="post"> Submit </button>
        </div>
    </CENTER>  
</form>