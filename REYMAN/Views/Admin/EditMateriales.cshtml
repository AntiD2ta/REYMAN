@using BizData.Entities
@model IEnumerable<Material>
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Materiales";
}

<div class="main">
    <p>
        <h1>Materiales</h1>
    </p>
    <p>
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
    </p>

    <section>
        <form method="post">
            <table id="myTable">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Unidad de Medida
                    </th>
                    <th> </th>
                    <th> </th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        <a>@item.UnidadMedida.Nombre</a>
                    </td>
                    <td>
                        <button class="button" type="submit" value="Edit/@item.MaterialID" name="button">   <span>Editar</span> </button>
                    </td>
                    <td>
                        <button class="button" type="submit" value="Delete/@item.MaterialID" name="button">   <span>Eliminar</span> </button>
                    </td>
                </tr>
                }
            </table>
            <button class="button" type="submit" value="Add" name="button">   <span>Añadir</span> </button>
        </form>
    </section>
</div>