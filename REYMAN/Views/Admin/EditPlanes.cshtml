@using BizData.Entities
@{
    Layout = "AdminLayout";
}
@model IEnumerable<Plan>
<style>
    #myTable tr.header, #myTable tr:hover {
        /* Add a grey background color to the table header and on hover */
        background-color: #f7cfcf;
    }
</style>
<div class="main">
    <h1>Planes</h1>
    <p>
        <section>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar por año">
        </section>
    </p>
    <section>
        <form method="post">
            <table id="myTable">
                <tr>
                    <th>
                        Año
                    </th>
                    @*<th>
                        Presupuesto
                    </th>*@
                    <th>
                        Tipo de Plan
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @item.Año
                        </td>
                        @*<td>
                            @item.Presupuesto
                        </td>*@
                        <td>
                            @item.TipoPlan
                        </td>
                        <td>
                            <a href="/Admin/PlanState?PlanID=@item.PlanID&Presupuesto=0&Año=0" class="button">   <span>Editar</span> </a>
                        </td>
                        <td>
                            <button name="id" value=@item.PlanID class="button">   <span>Eliminar</span> </button>
                        </td>
                    </tr>
                }
            </table>
            <a href="/Admin/AddPlan" class="button">   <span>Añadir</span> </a>
        </form>
    </section>
</div>