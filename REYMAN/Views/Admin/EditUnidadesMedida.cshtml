@using BizData.Entities
@model IEnumerable<UnidadMedida>
@{
    Layout = "AdminLayout";
    ViewData["Title"] = "Unidades de Medida";
    var adm = User.Claims.Any(x => x.Value == "admin");
}

<div class="main">
    <p>
        <h1>Unidades de medida</h1>
    </p>
    <p>
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar por nombre">
    </p>

    <section>
        <form method="post">
            <table id="myTable">
                <tr>
                    <th>
                        Unidad de Medida
                    </th>
                    @if (adm)
                    {

                        <th> </th>
                    }
                   
                </tr>
                @foreach (var item in Model)
                 {
                <tr>
                    <td>
                        @item.Nombre
                    </td>
                    @if (adm)
                    {
                    <td>
                        <button class="button" type="submit" value="Delete/@item.UnidadMedidaID" name="button">   <span>Eliminar</span> </button>
                    </td>
                    }
                </tr>
                  }
            </table>

            <button class="button" type="submit" value="Add" name="button">   <span>Añadir</span> </button>
            </form>
    </section>
</div>