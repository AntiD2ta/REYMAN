@using BizLogic.Authentication
@model RegisterUsuarioCommand
<form method="post">
    <CENTER>
        <div class="col-md-4 col-md-offset-3">
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Segundo Nombre(Opcional)</label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Primer Apellido</label>
                <input asp-for="FirstLastName" class="form-control" />
                <span asp-validation-for="FirstLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Segundo Apellido</label>
                <input asp-for="SecondLastName" class="form-control" />
                <span asp-validation-for="SecondLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Unidad Organizativa</label>
                <select class="form-control" asp-for="UO">
                    <option>Ninguna</option>
                    @foreach (var item in Model.UOs)
                    {
                        <option value=@item.UnidadOrganizativaID>@item.Nombre</option>
                    }
                </select>
            </div>
           
            <div class="form-group">
                <label>Permiso</label>
                <select class="form-control" asp-for=Claim>
                    <option value="inversionista">inversionista</option>
                    <option value="gerentes">gerentes</option>
                    <option value= "admin">admin</option>
                </select>
            </div>
            <input asp-for="ConfirmPassword" value="P9n$" hidden="hidden" />
            <button class="button form-control col-md-4 col-md-offset-3" type="submit">   <span>Guardar</span> </button>
        </div>
    </CENTER>
</form>
