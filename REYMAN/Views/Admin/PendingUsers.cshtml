@using BizData.Entities
@using BizLogic.Authentication
@using BizLogic.Administration
@model PendingUsersViewModel;

<section>
    <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
</section>

<section>
    <form method="post">
        <table id="myTable">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Correo
                </th>
                <th>
                    Unidad Organizativa
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model.Usuarios)
            {   
                <tr>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.FirstLastName
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @if (item.UnidadOrganizativa != null)
                {
                    Html.DisplayText(item.UnidadOrganizativa.Nombre);
                }
                    </td>
                    <td>
                       <button class="button" type="submit" value="userID" name="button">   <span>Autorizar</span> </button>
                    </td>
                </tr>
            }
        </table>
    </form>
</section>