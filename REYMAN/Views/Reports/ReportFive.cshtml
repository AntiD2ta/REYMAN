@using BizLogic.Reports;
@model ReportFive
@{
    ViewData["Title"] = "Modele Uno";
  
    var cant = Model.materiales.Count();
    var cant_unidades = Model.unidades.Count();
    var unidades = Model.unidades.ToArray();
    var materiales = Model.materiales.ToArray();
    var totales = Model.totales.ToArray();
}

<div>
    <h5> Plan de Reparaciones y Mantenimiento Constructivo </h5>
    <h5> Listado de materiales por Unidad Organizativa</h5>
    <h5 id="test"> Año: @Model.año </h5>
</div>

<div class="main">
    <table id="myTable">
        <tr>
            <th> </th>
            <th> </th>
            <th> </th>
            
            @for (int i = 0; i < cant_unidades; i++)
            {
                if ((i+1) == (int)(cant_unidades / 2))
                {
                    <th> Cantidades </th>
                }
                else
                { 
                    <th> </th>
                }
            }
        </tr>
        <tr>
            <th> Material </th>
            <th> u/m </th>
            <th> Total </th>
            
            @foreach (var unidad in Model.unidades)
            {
                <th> @unidad.Nombre </th>
            }

        </tr>

        @for (int i = 0; i < cant; i++)
        {
            <tr>
                <td> @materiales[i].Nombre</td>
                <td> @materiales[i].unidadMedida </td>
                <td> @totales[i]</td>
                
                @for (int j = 0; j < cant_unidades; j++)
                {
                    var unidad_materiales = unidades[j].materiales.ToArray();
                    <td> @unidad_materiales[i] </td>
                }

            </tr>
        }

    </table>
</div>

<style>
    #test {
        text-align: right;
    }
</style>